<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ExpressPage"
    android:background="@mipmap/bgimg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/transparency60">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="快递查询"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_mainColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/transparency60">
        <EditText
            android:id="@+id/expressId"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/border2"
            android:textColor="@color/app_mainColor"
            android:hint="请输入快递单号"
            android:paddingLeft="10dp"
            android:textColorHint="@color/app_mainColor"/>

        <EditText
            android:id="@+id/ex_company"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_below="@id/expressId"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border2"
            android:textColor="@color/app_mainColor"
            android:focusable="false"
            android:hint="请选择快递公司"
            android:paddingLeft="10dp"
            android:textColorHint="@color/app_mainColor"/>
        <Button
            android:id="@+id/ex_serch"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_below="@id/ex_company"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/border"
            android:text="查询"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/app_mainColor"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparency60">
        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:background="@drawable/border2"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/ex_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询历史"
                android:gravity="center"
                android:textColor="@color/app_black"
                android:textSize="18dp"/>
            <View
                android:id="@+id/view1"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="@color/app_mainColor"
                android:layout_below="@id/ex_tittle"/>
            <ListView
                android:layout_below="@id/view1"
                android:id="@+id/ex_recordList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
            <TextView
                android:id="@+id/tv_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无历史数据"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>